  \include "general_def.ly"

  hand = \drummode {
    \time 1/4
    \numericTimeSignature

    \repeat unfold 10 {sn16 sn sn sn}
  }
  foot = \drummode {
    <hhp bd>4 |
    hhp16 bd16 r8 |
    hhp8 bd8 |
    hhp8. bd16 |
    <hhp bd>16 bd16 r8 |
    <hhp bd>8 bd8 |
    <hhp bd>8. bd16 |
