  uphand = \drummode {
    \time 4/4
    \numericTimeSignature

    hh4-^ hh4-^ hh8 hh8-^ r8 hh8-^ |
    r8 hh8 hh4-^ hh8 hh8-^ r8 hh8-^
  }
  downhand = \drummode {
    sn4. sn4. sn4 | sn4. sn4. sn4
  }

  \score {
    <<
    \new DrumStaff 
    <<
    \set DrumStaff.drumStyleTable = #(alist->hash-table md)
    \new DrumVoice { \voiceOne \uphand }
    \new DrumVoice { \voiceTwo \downhand }
    >>
    >>
  }
  
\end{lilypond}

